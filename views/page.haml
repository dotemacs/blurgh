
.title

  %h1
    %a{:href => '/'}= @blurgh.title
  .subtitle
    = @blurgh.subtitle

- @posts.each do |post|
  .posttitle
    %a{:href => post.url}= post.title
  .date
    = days_ago(post.date)
  = parse(post.body)

- if @current == 2
  %a{:href => '/'} Previous
- else
  %a{:href => (@current - 1)} Previous

%a{:href => (@current + 1) } Next